<h1>My tasks</h1>
<ul><%= link_to 'Add a task', new_task_path %>
<% @tasks.each do |task| %>

  <li> <% if task.completed %>
          <input type="checkbox" checked>
        <% else %>
          <input type="checkbox" >
        <% end %>
  <label for="task"> <%= link_to task.title, task_path(task) %> . <%= link_to "Delete", task_path(task),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></label></li>
<% end %>
</ul>
